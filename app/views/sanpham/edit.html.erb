<h1 style="margin-left:50px; margin-top: 50px;">Edit Sản Phẩm</h1>
<div style="width: 600px;margin-left:400px; margin-top: 200px;">
<form action="/sanpham/edit/<%= @abc.id %>" method="post">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>    
  <div class="form-group">
    <label for="formGroupExampleInput" style="margin-right: 50px;">Tên Sản Phẩm</label>
    <input type="text" name="tensp" class="form-control" value="<%= @abc.tensp %>">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput" style="margin-right: 50px;">Giá</label>
    <input type="text" name="price" class="form-control" value="<%= @abc.price %>">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput" style="margin-right: 50px;">Số Lượng</label>
    <input type="text" name="soluong" class="form-control" value="<%= @abc.soluong %>">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput" style="margin-right: 50px;">Ghi Chú</label>
    <input type="text" name="ghichu" class="form-control" value="<%= @abc.ghichu %>">
  </div>
  <div class="form-group" style="margin-left: 150px;">
  <button type="submit" class="btn btn-primary pull-right">Sửa</button>
  </div>
   </form>
</div>


